type Query {
    pets: [Pet]
    favoritePet: Pet
    owner(pet: PetInput): Owner
}

type Pet {
    name: String
    color: String
}

type Mutation {
    changeUser(newName: String!): User
}
type User {
    name: String
    address: Address
}
type Address {
    street: String
    country: String
}
type Owner {
    firstName: String
    lastName: String
}

input PetInput {
    name: String
    color: String
}